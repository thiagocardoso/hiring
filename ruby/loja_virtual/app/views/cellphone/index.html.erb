
<% if flash[:errors] %>
	<% flash[:errors].each do |flash| %>
		<p> <%= flash %> </p>
	<% end %>
<% end %>

<h1>Cellphone List</h1>

<%= form_with url: { action: "search" } do |form| %>
  <%= form.text_field :query_param %>
  <%= form.submit "Search" %>
<% end %>

<%= render partial: 'cellphone_list', locals: { cellphones: @cellphones } %>

